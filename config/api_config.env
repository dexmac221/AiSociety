# AI Society API Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration for Meta-Routing
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here_optional

# Ollama Configuration
OLLAMA_HOST=http://192.168.1.62:11434
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3

# Model Download Configuration
AUTO_DOWNLOAD_MODELS=true
MAX_CONCURRENT_DOWNLOADS=1
DOWNLOAD_TIMEOUT_MINUTES=30

# Performance Settings
ENABLE_PERFORMANCE_TRACKING=true
CACHE_ROUTING_DECISIONS=true
CACHE_DURATION_HOURS=2

# Cost Control (for OpenAI)
MAX_DAILY_COST_USD=5.00
MAX_REQUESTS_PER_HOUR=200
ENABLE_COST_ALERTS=true

# Logging
LOG_LEVEL=INFO
LOG_ROUTING_DECISIONS=true
LOG_OPENAI_REQUESTS=true

# GPU Settings (adjust based on your hardware)
MAX_VRAM_GB=24
PREFERRED_MODEL_SIZES=3b,7b,9b,13b
